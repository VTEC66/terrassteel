<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/standard_itemview_height"
    android:orientation="horizontal">

    <com.vtec.terrassteel.common.ui.FontTextView
        android:id="@+id/employee_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_title"
        android:textColor="@color/antracite_grey"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/standard"
        android:gravity="center_vertical"/>

    <Chronometer
        android:id="@+id/chronometer_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/antracite_grey"
        android:textSize="@dimen/chronometer_size"
        android:layout_toStartOf="@+id/action_view"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/small"/>

    <ImageView
        android:id="@+id/action_view"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/standard"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_play_circle"
        android:tint="@color/antracite_grey"/>

</RelativeLayout>