<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TranslucentStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:background">@null</item>
    </style>

    <style name="FullTranslucent" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:background">@null</item>
    </style>

    <style name="TitleTextStyle">
        <item name="fontType">SF_PRO_BOLD</item>
        <item name="android:textColor">@color/antracite_grey</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="StandardTextStyle">
        <item name="fontType">SF_PRO_REGULAR</item>
        <item name="android:textColor">@color/antracite_grey</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
    </style>

</resources>
