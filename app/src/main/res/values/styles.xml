<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TranslucentStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:background">@null</item>
    </style>

    <style name="FullTranslucent" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:background">@null</item>
    </style>

    <style name="TitleTextStyle">
        <item name="fontType">SF_PRO_BOLD</item>
        <item name="android:textColor">@color/antracite_grey</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="StandardTextStyle">
        <item name="fontType">SF_PRO_REGULAR</item>
        <item name="android:textColor">@color/antracite_grey</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/antracite_grey</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/antracite_grey</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="boxStrokeColor">@color/antracite_grey</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>


    <style name="TerrassteelButtonStyle" parent ="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:height">@dimen/button_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingStart">@dimen/standard</item>
        <item name="android:paddingEnd">@dimen/standard</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FullButtonStyle" parent ="@style/TerrassteelButtonStyle">
        <item name="android:background">@drawable/button_full_selector</item>
    </style>

</resources>
