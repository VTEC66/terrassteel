<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vtec.terrassteel">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>


    <application
        android:name=".core.VtecApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.vtec.terrassteel.splashscreen.ui.SplashScreenActivity"
            android:launchMode="singleInstance"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullTranslucent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".home.ui.HomeActivity"
            android:launchMode="singleInstance"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullTranslucent"/>

        <activity android:name=".home.construction.ui.AddConstructionActivity"
            android:launchMode="singleInstance"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullTranslucent"/>

        <activity android:name=".home.company.customer.ui.ListCustomersActivity"
            android:launchMode="singleInstance"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullTranslucent"/>

        <activity android:name=".home.company.employee.ui.ListEmployeesActivity"
            android:launchMode="singleInstance"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullTranslucent"/>

        <activity android:name=".home.company.customer.ui.EditCustomerActivity"
            android:launchMode="singleInstance"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullTranslucent"/>

        <activity android:name=".home.company.employee.ui.EditEmployeeActivity"
            android:launchMode="singleInstance"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullTranslucent"/>

        <activity android:name=".main.ui.MainActivity"
            android:launchMode="singleInstance"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullTranslucent"/>

        <activity android:name=".main.ui.workorder.ui.AddWorkOrderActivity"
            android:launchMode="singleInstance"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullTranslucent"/>

        <activity android:name=".main.ui.assign.ui.AddAssignActivity"
            android:launchMode="singleInstance"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullTranslucent"/>

        <activity android:name=".main.ui.workorder.ui.DetailWorkOrderActivity"
            android:launchMode="singleInstance"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullTranslucent"/>

        <activity android:name=".main.ui.workorder.ui.ListImputationActivity"
            android:launchMode="singleInstance"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullTranslucent"/>

        <activity android:name=".common.ui.ScanActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:screenOrientation="portrait"/>

    </application>

</manifest>